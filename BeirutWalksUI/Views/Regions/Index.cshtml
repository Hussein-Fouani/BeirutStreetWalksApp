@model IEnumerable<BeirutWalksDomains.Dto.RegionsDto>





<h1 class="mt-3">Regions</h1>

<div class="d-flex justify-content-end">
    <a class="btn btn-secondary" asp-controller="Regions" asp-action="Add" >Add Regions</a>

</div>

<table class="table table-bordered">
   <thead>
       <tr>
           Id
       </tr>
       <tr>
           Code
       </tr>
       <tr>
           Name
       </tr>
       <tr></tr>
       <tbody>
           @foreach (var region in Model)
              {
                <tr>
                     <td>@region.Id</td>
                     <td>@region.Code</td>
                     <td>@region.Name</td>
                     <td>
                         <a class="btn btn-light" asp-controller="Regions" asp-action="Edit" asp-route-id="@region.Id">Edit</a>
                     </td>
                </tr>
              }
       </tbody>

   </thead>
</table>