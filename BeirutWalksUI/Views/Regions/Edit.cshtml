@model BeirutWalksDomains.Dto.RegionsDto


<h1 class="mt-3">Edit Region</h1>

@if(Model is no null){
    <form method="post">
        <div class="form-group">
            <label for="Code">Region Code</label>
            <input type="text" class="form-control" id="Code" name="Code" value="@Model.Code">
        </div>
        <div class="form-group">
            <label for="Name">Region Name</label>
            <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name">
            </div>
        <div class="form-group">
            <label for="RegionImageUrl">Region RegionImageUrl</label>
            <input type="text" class="form-control" id="RegionImageUrl" name="RegionImageUrl" value="@Model.RegionImageUrl">
        </div>
        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>
            <button type="submit" asp-controller="Regions" asp-action="Delete" class="btn btn-danger"></button>

        </div>
    </form>
}